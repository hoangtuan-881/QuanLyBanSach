@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/user.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Đặt hàng thành công</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/User/images/icons/favicon.png" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/User/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/User/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/User/fonts/iconic/css/material-design-iconic-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/User/fonts/linearicons-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/User/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/User/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/User/css/main.css">
    <!--===============================================================================================-->
    <style>
        .success-container {
            text-align: center;
            padding: 40px 0;
            background: #EBF0F5;
        }

            .success-container i {
                font-size: 100px;
                color: #5cb85c;
                margin-bottom: 30px;
            }

            .success-container h2 {
                color: #3c763d;
                font-size: 24px;
                margin-bottom: 15px;
            }

            .success-container p {
                font-size: 18px;
                color: #636c72;
                margin-bottom: 20px;
            }

            .success-container a {
                display: inline-block;
                padding: 10px 20px;
                font-size: 16px;
                color: #fff;
                background-color: #5cb85c;
                border-radius: 5px;
                text-decoration: none;
            }
    </style>
</head>
<body>
    <div class="success-container">
        <i class="zmdi zmdi-check-circle"></i>
        <h2>Đặt hàng thành công!</h2>
        <p>Cảm ơn bạn đã mua hàng tại cửa hàng của chúng tôi.</p>
        <a href="@Url.Action("Index","Home")">Tiếp tục mua sắm</a>
    </div>
</body>
</html>